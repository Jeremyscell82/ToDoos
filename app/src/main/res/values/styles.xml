<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/primaryTextColor</item>
    </style>

    <!-- SPLASH SCREEN BACKGROUND  -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">#100F0F</item>
    </style>

    <style name="TextInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxCornerRadiusTopStart">@dimen/default_card_corners</item>
        <item name="boxCornerRadiusTopEnd">@dimen/default_card_corners</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/default_card_corners</item>
        <item name="boxCornerRadiusBottomStart">@dimen/default_card_corners</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/primaryTextColor</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="placeholderTextColor">@color/primaryTextColor</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="helperTextTextColor">@color/secondaryTextColor</item>
    </style>

    <!-- Make a textview look like a rounded button-->
    <style name="text_button_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:background">@drawable/background_rounded_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="font_cardview_title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="font_status_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grayText</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="font_error">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ErrorTextColor</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="make_clickable">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
